<h2 class="ui center aligned medium icon header">
  <%# <i class="angle double right green icon"></i> %>
  <i class="power off orange icon"></i>
  You can Log In/Sign Up here
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, url: login_path, html: {class: "ui form", role: "form"}) do |f| %>
        <div class="field">
          <%= f.label :username, "Username"%>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter your pass" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Login", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>