<%# Navbar partial %>

<div class="ui large inverted menu">
    <div class="ui container">
        <%= link_to "Chatroom", root_path, class: "active red item" %>
        <a class="red item">
            Messages
        </a>
        <div class="right menu">
            <div class="ui dropdown item">
            Account <i class="dropdown icon"></i>
            <div class="menu">
                <% if logged_in? %>
                    <%= link_to "Logout", logout_path, class: "item", method: "delete" %>
                <% else %>
                    <a class="item">Sign Up</a>
                    <%= link_to "Log In", login_path, class: "item" %>  
                <% end %>
            </div>
            </div>
            <div class="item">
                <% if logged_in? %>
                    <div class="ui teal button"><%= current_user.username %></div>
                <% else %>
                    <div class="ui teal button">Sign Up</div>
                <% end %>
            </div>
        </div>
    </div>
</div>